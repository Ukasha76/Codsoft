<% layout('layouts/authboiler') %>




    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">

                    <img src="/pic/pic1.jpg" alt="This is a pic" class="card-img-top" />

                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <!-- have to add no validate funcationality -->
                        <form action="/user/login" method="POST" class="validate" novalidate>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id="email" autofocus
                                    placeholder="email" required>

                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" name="password" class="form-control" id="password"
                                    placeholder="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success btn-block">Login</button>
                        </form>
                        <div class="container">
                            <div class="row mt-3">
                                <div class="col-md-12 text-center">
                                    <p class="mb-3">Not Registered!!!</p>
                                    <a href="/user/signup">Signup</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

  